            fi
            [ $# -lt 2 ] && ViashError Not enough arguments passed to --keep_features. Use "--help" to get more information on the parameters. && exit 1
            shift 2
            ;;
        --keep_features=*)
            if [ -z "$VIASH_PAR_KEEP_FEATURES" ]; then
