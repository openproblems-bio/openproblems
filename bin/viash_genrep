echo "    --tmp"
echo "        type: file"
echo "        default: /tmp"
echo "        System temp dir if different from /tmp (e.g. on Mac use /private/tmp)"
echo ""


echo "    --output"
echo "        type: file, output"
echo "        default: debug_report.md"
echo "        Name/path of the output markdown file"
